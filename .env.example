# Document and data paths
DOCUMENTS_DIR=/path/to/documents
VECTOR_DIR=/path/to/data/vector_db
GRAPH_PATH=/path/to/data/graph.json

# Processing options
CHUNKING_STRATEGY=markdown  # Options: markdown, fixed, yaml, sliding
PROCESSOR_MODE=both  # Options: vector, graph, both
CONFIG_PATH=/path/to/configs/campaign_config.json

# Embedding model for vector store
EMBEDDING_MODEL_NAME=sentence-transformers/all-mpnet-base-v2
EMBEDDING_MODEL_DIMENSION=768

# Hugging Face Inference Endpoint
HF_API_TOKEN=your_huggingface_api_token
HF_INFERENCE_ENDPOINT=https://api-inference.huggingface.co/models/your-model-name
HF_MODEL_NAME=your-model-name

# Hugging Face specific settings
HF_MAX_LENGTH=512
HF_TOP_K=50
HF_TOP_P=0.95
HF_TEMPERATURE=0.7